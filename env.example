# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Get your project ID from: https://platform.openai.com/settings/general
OPENAI_PROJECT_ID=proj_your_project_id_here

# Webhook secret for SIP webhook security (generate a random string)
OPENAI_WEBHOOK_SECRET=your_webhook_secret_here

# Server Configuration
PORT=3001
NODE_ENV=production

# SIP Configuration (Optional - can be configured in the UI)
SIP_PROVIDER=twilio
SIP_PHONE_NUMBER=+18001234567

# Database Configuration (if you plan to store configurations)
# DATABASE_URL=postgresql://username:password@localhost:5432/voice_agent

# Logging Configuration
LOG_LEVEL=info

# CORS Configuration (for development)
CORS_ORIGIN=http://localhost:5173
